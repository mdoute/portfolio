---
import Layout from "../layouts/Layout.astro";
const YEAR = new Date().getFullYear();
---
<Layout title="mDoute.com — Coming Soon" className="min-h-screen">
  <fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content="mdoute.com — new site coming soon." />
    <meta property="og:title" content="mdoute — Coming Soon" />
    <meta property="og:description" content="New site on the way. Stay tuned." />
  </fragment>

  <main class="min-h-[80vh] grid place-items-center px-6">
    <section class="text-center space-y-6">
      <div class="mx-auto h-16 w-16 rounded-2xl ring-1 ring-neutral-200 grid place-items-center">
        <span class="sr-only">Under construction</span>
        <svg viewBox="0 0 24 24" class="h-8 w-8" aria-hidden="true">
          <path d="M12 2 3 20h18L12 2Z" fill="currentColor" class="text-neutral-900/80" />
          <path d="M12 6l6.5 13h-13L12 6Z" fill="currentColor" class="text-neutral-400/50" />
        </svg>
      </div>

      <h1 class="text-4xl md:text-6xl font-bold tracking-tight">
        New site in the works.
      </h1>

      <p class="max-w-xl mx-auto text-neutral-600 text-lg">
        Rebuilding mdoute.com with Astro + Tailwind. Check back soon — or email me if you need something now.
      </p>

      <div class="flex items-center justify-center gap-3 pt-2">
        <a href="mailto:mdoute@gmail.com"
           class="inline-flex items-center justify-center rounded-xl px-5 py-3 text-base font-medium bg-black text-white hover:bg-neutral-800 transition">
          Email me
        </a>
      </div>
    </section>
  </main>

  <footer class="px-6 pb-8">
    <div class="max-w-5xl mx-auto text-sm text-neutral-500 text-center">
      © {YEAR} mdoute
    </div>
  </footer>
</Layout>
