---
interface Props {
title?: string;
description?: string;
}


const {
title = 'Mike Doute â€” Digital Marketing & Analytics',
description = 'Digital marketer & analytics specialist focused on performance, measurement, and pragmatic growth.',
} = Astro.props as Props;


import '../styles/global.css'
---


<html lang="en" class="scroll-smooth antialiased">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<meta name="description" content={description} />
<title>{title}</title>


<!-- Favicon / PWA basics -->
<link rel="icon" href="/favicon.svg" type="image/svg+xml" />

<!---Web Analytics -->
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-GC2SF5V5G6"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-GC2SF5V5G6');
</script>


<!-- Open Graph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content="https://mdoute.com/" />
</head>
<body class="bg-white text-gray-900">
<slot name="header" />
<main class="min-h-[70vh]"> <slot /> </main>
<slot name="footer" />
</body>
</html>